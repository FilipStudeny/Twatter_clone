        title Twatter | #{pageTitle}
    body
        script.
            const userLoggedIn = !{userLoggedInJS};
        .wrapper 
            .row 
                nav.col-2

                    a.blue(href="/") 
                        i.fa-solid.fa-kiwi-bird
                    a(href="/") 
                        i.fa-solid.fa-house-user             
                    a(href="/search") 
                        i.fa-solid.fa-magnifying-glass
                    a(href="/notifications") 
                        i.fa-solid.fa-bell        
                        span#notificationBadge    
                    a(href=`/profile/${userLoggedIn.username}`) 
                        i.fa-solid.fa-user
                    a(href="/messages") 
                        i.fa-solid.fa-message
                        span#messagesBadge   
                    a(href="/logout") 
                        i.fa-solid.fa-right-from-bracket

                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer 
                        h1 #{pageTitle}
                        block headerButton 

                    block pageContent

                .d-none.d-md-block.col-2.col-lg-4


        script(src='https://kit.fontawesome.com/a2c399c19b.js', crossorigin='anonymous')
